<section>
  <h1 class="centered-all">Assignments! ðŸ“ƒ</h1>
  <% if (user) { %>
   
   
    <h2>Add an Assignment!</h2>
    <form class="centered-all" action="/assignments" method="POST" ">
      <label>
        Add Assignment:
        <input type="text" name="name" autocomplete="off">
      </label>
      <label>
        Completed?
        <input type="checkbox" name="completed">
      </label>
      <button type="submit">Add ðŸ“ƒ</button>
    </form>
  <% } %>
  <div class="margin-top centered-all column">
  <h2>All the Assignments!</h2>
  
  <ul>
    <% assignments.forEach(assignment => { %>
      <li class="font-large">
        <i class="fa-solid fa-paperclip fa-beat" style="--fa-animation-duration: 2s;"></i>
        <a href="/assignments/<%= assignment._id %>"><%= assignment.name %></a> 
