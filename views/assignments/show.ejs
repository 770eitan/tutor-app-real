<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <p>From the kitchen of <%= assignment.owner.name %></p>
  <h1><%= assignment.name %> 🌮</h1>
  <h2>This assignment is <%= assignment.tasty ? "tasty! 🤯" : "not tasty 😔" %></h2>
  <% if (user) { %>
    <form 
      action="/assignments/<%= assignment._id %>/flip-tasty?_method=PATCH"
      method="POST"
    >
      <button class="btn" type="submit">
        Make assignment <%= assignment.tasty ? "not tasty 😠" : "tasty 🎉" %> 
      </button>
    </form>
  <% } %>
  <% if (assignment.owner.equals(user?.profile._id)) { %>
    <form action="/assignments/<%= assignment._id %>/edit" method="GET">
      <button class="btn" type="submit">Edit this Assignment 🚧</button>
    </form>
    <form action="/assignments/<%= assignment._id %>?_method=DELETE" method="POST">
      <button class="btn" type="submit">Delete this Assignment 🌮😠</button>
    </form>
  <% } %>
</section>

<%- include('../partials/footer') %>